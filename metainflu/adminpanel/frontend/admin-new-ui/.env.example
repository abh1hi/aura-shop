# Aura Shop Admin Panel - Environment Variables

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api

# Application Configuration
VITE_APP_NAME=Aura Shop Admin
VITE_APP_VERSION=1.2.0
VITE_APP_DESCRIPTION=Secure e-commerce admin panel

# Development Configuration
VITE_ENABLE_DEVTOOLS=true
VITE_LOG_LEVEL=debug

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_FILE_UPLOAD=true

# Security Configuration
VITE_CSRF_PROTECTION=true
VITE_SESSION_TIMEOUT=900000

# UI Configuration
VITE_THEME=default
VITE_ITEMS_PER_PAGE=12

# External Services (Optional)
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=

# Production overrides (create .env.production for production values)
# VITE_API_BASE_URL=https://api.yourapp.com/api
# VITE_ENABLE_DEVTOOLS=false
# VITE_LOG_LEVEL=error